<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:weightSum="15">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:textColor="@color/color_Black"
        android:id="@+id/zeroMinutesBefore"
        android:text="On time"/>

    <TextView
        android:textColor="@color/color_Black"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/tenMinutesBefore"
        android:text="10 minutes before"/>

    <TextView
        android:textColor="@color/color_Black"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/twentyMinutesBefore"
        android:text="20 minutes before"/>

    <TextView
        android:textColor="@color/color_Black"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/thirtyMinutesBefore"
        android:text="30 minutes before"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:textColor="@color/color_Black"
        android:id="@+id/oneHourBefore"
        android:text="1 hour before"/>

</LinearLayout>