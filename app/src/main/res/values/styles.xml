<resources>

    <!-- Base application theme.-->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorActionBar</item>
        <item name="colorPrimaryDark">@color/colorActionBarHeader</item>
        <item name="colorAccent">@color/color_white</item>
    </style>

    <style name="AddReminder" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorActionBar</item>
        <item name="colorPrimaryDark">@color/colorActionBarHeader</item>
        <item name="colorAccent">@color/color_Purple</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabSelectedTextColor">@color/color_white</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>



    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />
    <style name="menu_labels_style">

        <item name="android:textColor">@color/color_white</item>
        <item name="colorAccent">@color/color_white</item>
        <item name="android:background">@drawable/corner_radius</item>
        <item name="android:padding">10dp</item>
    </style>

    //datepicker theme
    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light">
        <!-- this is new -->
        <item name="colorPrimaryDark">@color/colorActionBarHeader</item>
        <item name="colorAccent">@color/color_Blue</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>

    //date style
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@drawable/tab_layout_top_gradient</item>
        <item name="android:focusedMonthDateColor">@color/colorFabLabelbackground</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:selectableItemBackground">@color/color_Purple</item>
    </style>

    //time style
    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@drawable/tab_layout_top_gradient</item>
        <item name="android:numbersBackgroundColor">@color/color_white</item>

    </style>

</resources>
