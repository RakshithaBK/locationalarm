        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AuthenticationActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".ConfirmRegisterActivity" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".OffersActivity"
            android:label="Offers and Coupons"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDqmAQS3dFEYSu_PvrYohlnD0fjRspzzrw" />

        <activity
            android:name=".AddReminderActivity"
            android:theme="@style/AddReminder" />

        <service android:name=".Utils.LocationReminderIntentService" />

        <activity android:name=".OffersMapActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
