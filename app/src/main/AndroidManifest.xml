    <uses-permission android:name="android.permission.RECORD_AUDIO" />
       <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AuthenticationActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".ConfirmRegisterActivity" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".OffersActivity"
            android:label="Offers and Coupons"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AddReminderActivity"
            android:theme="@style/AddReminder" />

        <service android:name=".Utils.LocationReminderIntentService" />

        <activity android:name=".OffersMapActivity" />
        <activity
            android:name=".AddReminderToDateActivity"
            android:theme="@style/AddReminder" />

        <activity android:name=".RemindMeTask" />

        <activity
            android:name=".ReminderSetActivity"
            android:theme="@style/MyDatePickerDialogTheme" />
        <activity
            android:name=".ReminderSetToOthers"
            android:theme="@style/MyDatePickerDialogTheme" />
        <activity android:name=".AlarmRingingActivity" />


